{
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchFiles": [
        "package.json"
      ],
      "groupName": "NPM"
    },
    {
      "matchLanguages": [
        "Gemfile"
      ],
      "groupName": "Ruby"
    }
  ]
}
