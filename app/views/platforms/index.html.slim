.container
  form.tracesearch action=search_path
    .input-group
      input.form-control type="search" name="id" placeholder="Paste a UUID here..." required=true
      button.btn.btn-primary type="submit" Search

  .platforms
    - @platforms.each do |platform|
      .platform
        h3
          = link_to platform.name, traces_path(platform)
        div
          .info
            span Applications
            div
              = platform.applications.count
